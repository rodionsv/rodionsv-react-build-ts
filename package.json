{
  "name": "react-build",
  "version": "1.0.0",
  "description": "React build with webpack 5",
  "author": "rodionsv",
  "scripts": {
    "start": "webpack serve --mode=development",
    "start:https": "webpack serve --mode=development --env cert",
    "dev": "webpack --mode=development",
    "build": "webpack --mode=production",
    "test": "jest",
    "prettier": "prettier --check \"src/**/*.{ts,tsx,js}\"",
    "prettier:fix": "prettier --write \"src/**/*.{ts,tsx,js}\"",
    "linter": "eslint src/**/*.{ts,tsx,js}",
    "linter:fix": "eslint --fix src/**/*.{ts,tsx,js}",
    "linters:check": "npm run linter && npm run prettier",
    "linters:fix": "npm run linter:fix && npm run prettier:fix",
    "stylelint": "stylelint src/styles/**/*.css",
    "stylelint:fix": "stylelint --fix src/styles/**/*.css",
    "linters:all:check": "npm run linters:check && npm run stylelint",
    "linters:all:fix": "npm run linters:fix && npm run stylelint:fix"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-test-renderer": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "core-js": "^3.8.3",
    "css-loader": "^5.0.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.3",
    "mqpacker": "^7.0.0",
    "postcss": "^8.2.1",
    "postcss-font-magician": "^3.0.0",
    "postcss-loader": "^4.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.1",
    "source-map-loader": "^2.0.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.8.0",
    "stylelint-order": "^4.1.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  }
}
